include 'config.ttl'

; Hide MACRO dialog box
show -1

call CheckSavedConf
if ret = 1 then
    yesnobox 'Saved configuration found!. Do you want to use it?' 'Information'
    if result then
        goto let_start
    else
        filedelete conf_file
    endif
endif

include 'inputssh.ttl'
if ret=0 goto _end

include 'inputcom.ttl'
if ret=0 goto _end

:let_start

getttdir dir_tearterm

; Start DEV_SERVER.TTL script
sprintf2 cmd_str 'cmd /c start "" "%s\TTERMPRO" /M="%s"' dir_tearterm macro_dev_server
exec cmd_str

; Start COM_BOX.TTL script
sprintf2 cmd_str 'cmd /c start "" "%s\TTERMPRO" /M="%s"' dir_tearterm macro_com_box
exec cmd_str

:_end
end

; *****************************************************
; *
; *   Function      : CheckSavedConf
; *   Description   : Check the existence of saved configuration
; *   Input         : None
; *   Output        : ret (0: Not Found ; 1: Found)
; *
; *****************************************************
:CheckSavedConf
filesearch conf_file
if result=1 then
	ret = 1
else
    ret = 0
endif

return